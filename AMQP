# AMQP config file for Gomatch.
#
# .exchangeName - Durable, non-auto-deleted AMQP exchange name
# .exchangType - direct|fanout|topic|x-custom
# consumer.queue - Ephemeral AMQP queue name
# consumer.tag - should not be blank
# consumer.lifetimesec - lifetime of process before shutdown (0s=infinite)
# producer.body - body of message
# producer.reliable - Wait for the publisher confirmation before exiting

amqp.consumer.uri=amqp://guest:guest@localhost:5672/
amqp.consumer.exchangeName=test-exchange
amqp.consumer.exchangeType=direct
amqp.consumer.queue=test-queue
amqp.consumer.bindingKey=test-key
amqp.consumer.tag=consumer-tag
amqp.consumer.lifetimesec=5

amqp.producer.uri=amqp://guest:guest@localhost:5672/
amqp.producer.exchangeName=exchange
amqp.producer.exchangeType=direct
amqp.producer.routingKey=test-key
amqp.producer.body=foobar
amqp.producer.reliable=true
